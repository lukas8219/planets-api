datasource db {
  provider = "mysql"
  url      = "mysql://lucas:12345678@localhost:3306/planets?"
}

// Generator
generator client {
  provider = "prisma-client-js"
}

model Planet {
  
  id    Int     @id @default(autoincrement())
  name String @unique
  terrain String
  movies Movies[]

}

model Movies {

  id Int @id @default(autoincrement())
  planetId Int
  planet Planet? @relation(fields: [planetId], references: [id])
  name String
  
  @@index([id], name:"movies_id")
}